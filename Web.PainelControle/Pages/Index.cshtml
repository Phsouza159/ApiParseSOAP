@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Coluna principal -->
<div class="col-md-8">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Tipo cadastro</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Selecior Tipo</option>
                <option value="1">Automatico</option>
                <option value="2">Manual</option>
            </select>
        </div>


    <form>

        <section id="area-automatico">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Caminho WSDL</label>
                <input type="email" size="3" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
        </section>

        <section id="area-manual">
        </section>
       
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>